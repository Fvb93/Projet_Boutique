@model BoutiqueEnLigne.Models.CategoryFormModel

@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>

<h4>CategoryFormModel</h4>
<hr />
<div class="row">
    <div class="col-md-4 detailproduit">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-outline-success w-100" type="submit" value="Valider" asp-route-id="@Model.Id" />
                <input class="btn btn-outline-danger w-100" type="submit" value="Retour" asp-controller="Category" asp-action="Index" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
