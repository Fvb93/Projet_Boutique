@model BoutiqueEnLigne.Models.ProductFormModel

@{
    ViewData["Title"] = "Add";
}

<div class="row">
    <div class="col-md-4 detailproduit">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock" class="control-label"></label>
                <input asp-for="Stock" class="form-control" value="0" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TVA" class="control-label"></label>
                <input asp-for="TVA" class="form-control" value="21" type="number" step="0.01" />
                <span asp-validation-for="TVA" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Catégories :</label><br />
                @for (int i = 0; i < Model.Categories.Count; i++)
                {
                    <input type="checkbox" asp-for="Categories[i].IsSelected" />
                    <input type="hidden" asp-for="Categories[i].Name" />
                    <input type="hidden" asp-for="Categories[i].Id" />
                    <label>@Model.Categories[i].Name</label> <br />
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Ajouter" class="btn btn-primary" />
                <input type="submit" value="Retour" asp-controller="Product" asp-action="Index" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
