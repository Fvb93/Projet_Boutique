@{
    var userFirstName = Context.Session.GetString("Prenom");
    var userId = Context.Session.GetInt32("Id");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FabMarket</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BoutiqueEnLigne.styles.css" asp-append-version="true" />
</head>
<body class="@ViewBag.BodyClass">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img style="height:3vh" src="~/images/logo.png" />FabMarket</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Category" asp-action="Index">Catégories</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">Produits</a>
                        </li>

                                            @if (User.HasClaim("Admin", "True"))
                {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">Utilisateurs</a>
                        </li>
                }
                        </ul>
                    <ul class="navbar-nav ms-auto">

                        <li class="nav-item">
                            @if (string.IsNullOrEmpty(userFirstName))
                            {
                            <li class="nav-item ">
                                <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Add">Créer un compte</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Login">Se connecter</a>
                            </li>
                            }
                            else
                            {
                            <li class="nav-item">
                                <span class="nav-link text-dark">Bonjour, @userFirstName</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Detail" asp-route-id="@userId">Mon profil</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link  text-dark" asp-area="" asp-controller="User" asp-action="Logout">Se déconnecter</a>
                            </li>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
